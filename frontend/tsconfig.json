{
	"compilerOptions": {
		"jsx": "react",
		"module": "commonjs",
		"noImplicitAny": true,
		"outDir": "./build/",
		"preserveConstEnums": true,
		"removeComments": true,
		"sourceMap": true,
		"target": "es5",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true
	},
	"include": ["./src/**/**/*"],
	"typedocOptions": {
		"entryPoints": ["src/index.tsx"],
		"entryPointStrategy": "expand",
		"out": "docs"
	}
}
