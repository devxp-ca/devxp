{
	"compilerOptions": {
		"jsx": "react",
		"module": "commonjs",
		"noImplicitAny": true,
		"outDir": "./build/",
		"preserveConstEnums": true,
		"removeComments": true,
		"sourceMap": true,
		"target": "es5",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"allowJs": true
	},
	"include": ["./src/**/**/*", "index.d.ts"],
	"typedocOptions": {
		"entryPointStrategy": "expand",
		"entryPoints": ["./src"],
		"out": "docs",
		"darkHighlightTheme": "dark-plus"
	}
}
